@using AnimeRecs.RecService.ClientLib
@using AnimeRecs.RecEngine
@using AnimeRecs.Web
@using AnimeRecs.Web.Models.ViewModels
@model GetRecsViewModel
           
@{
    Model.DeclareAnimeToBeDisplayed(Model.Results.Results.Select(rec => rec.ItemId));
}

<table class="recsTable">
    <thead>
        <tr>
            <td>
                Anime
            </td>
            <td>
                Streams
            </td>
            <td>
                Type
            </td>
            <td>
                Popularity Index
            </td>
            <td>
                Popularity Rank
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (MostPopularRecommendation rec in Model.Results.Results.Cast<MostPopularRecommendation>())
        {
            <tr>
                <td>
                    @Html.GetRecommendedMalAnimeHtml(rec.ItemId, Model)
                </td>
                <td>
                    @Html.GetStreamLinksHtml(rec.ItemId, Model, Url)
                </td>
                <td>
                    @Html.MalAnimeTypeAsString(Model.Results.AnimeInfo[rec.ItemId].Type)
                </td>
                <td>
                    @rec.NumRatings
                </td>
                <td>
                    #@rec.PopularityRank
                </td>
            </tr>
        }
    </tbody>
</table>

