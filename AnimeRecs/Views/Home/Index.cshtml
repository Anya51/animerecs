@using AnimeRecs;
@model AnimeRecs.Models.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Anime Recommendation Finder";
}
<div id="header" class="noselect">
    <h1 class="title">
        Anime Recommendation Finder</h1>
</div>
<div id="main" class="splash">
    <div class="title">
        Anime Recommendation Finder</div>
    <div class="datainput">
        <div class="usernamesubmit">
            <input class="username textinput bigtextinput" type="text" placeholder="your MyAnimeList.net username" />
            <a class="go noselect" id="splash-go">
                <div class="go-arrow">
                </div>
            </a>
        </div>
        <div class="autoscores noselect">
            <input id="autoscores" type="checkbox" value="autoscores" checked />
            <label for="autoscores">
                Guess what my scores mean</label>
        </div>
        <div class="scores" style="display: none;">
            <div class="scoretitle">
                Minimum score for an anime you watched to be considered</div>
            <div class="scoreinput scoregood">
                <span>"good"</span><input class="good textinput smalltextinput" type="text" value="8"
                    maxlength="2" /></div>
        </div>
    </div>
    <div id="results">
    </div>
    <div class="footer">Want to help out by being a recommendor? Have a bug report or suggestion? <a href="@AppGlobals.Config.OwnerMalLink"> Message me on MAL.</a></div>
</div>
<!-- #main -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script>    window.jQuery || document.write('<script src="@Url.Content("~/Scripts/libs/jquery-1.7.1.min.js")"><\/script>')</script>
<script src="@Url.Content("~/Scripts/libs/jquery.placeholder.min.js")"></script>
<script src="@Url.Content("~/Scripts/script.js")"></script>
