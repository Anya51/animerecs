<?xml version="1.0"?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <appSettings>
    <add key="DelayBetweenRequestsMs" value="5000"/>
    <add key="MalTimeoutInMs" value="10000"/>
    <add key="MalApiUserAgentString" value="mal-cache-updater"/>
    <add key="UsersPerRun" value="100"/>
    <add key="MaxUsersInDatabase" value="5000"/>
    <add key="MinimumAnimesCompletedAndRated" value="50"/>
    <add key="NumMalRequestFailuresBeforeGivingUp" value ="5"/>
    <add key="DelayAfterMalRequestFailureInMs" value="10000"/>
  </appSettings>
  <connectionStrings>
    <add name="Postgres" connectionString="Server=localhost;Port=5432;User Id=postgres;Password=testpw;Database=animerecs;Timeout=10;"/>
  </connectionStrings>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog">
        <arg key="configType" value="INLINE"/>
      </factoryAdapter>
    </logging>
  </common>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets async="true">
      <!--<target xsi:type="File" name="File" keepFileOpen="true" concurrentWrites="false" fileName="C:\Users\Greg\AppData\Roaming\AnimeRecs\UpdateUserDatabase.log" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:innerformat=tostring:maxInnerExceptionLevel=10:format=tostring}"/>-->
      <target xsi:type="Console" name="Console" layout="${message} ${exception:innerformat=tostring:maxInnerExceptionLevel=10:format=tostring}"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="File"/>
      <logger name="*" minlevel="Info" writeTo="Console"/>
    </rules>
  </nlog>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
