<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <sectionGroup name="system.web.webPages.razor" type="System.Web.WebPages.Razor.Configuration.RazorWebSectionGroup, System.Web.WebPages.Razor, Version=2.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35">
      <section name="host" type="System.Web.WebPages.Razor.Configuration.HostSection, System.Web.WebPages.Razor, Version=2.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
      <section name="pages" type="System.Web.WebPages.Razor.Configuration.RazorPagesSection, System.Web.WebPages.Razor, Version=2.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <connectionStrings>
    <add name="Postgres" connectionString="Server=localhost;Port=5432;User Id=postgres;Password=testpw;Database=animerecs;Timeout=60;" />
  </connectionStrings>
  <appSettings>
    <add key="AnimeListCacheExpiration.Minutes" value="0" />
    <!-- Must be less than 60 -->
    <add key="AnimeListCacheExpiration.Seconds" value="30" />

    <!-- Change this setting if using a non-default port for the rec service -->
    <!--<add key="RecService.Port" value="5541"/>-->

    <!-- RecService.RecSourceName.Port will change the port used for a specific rec source from the port specified above or from the default.
         This can be useful if you want to use different databases for certain rec sources. -->
    <!--<add key="RecService.AverageScore.Port" value="5542"/>-->

    <!-- Rec source to use when the user does not explicitly specifiy it. -->
    <add key="RecService.DefaultRecSource" value="default" />

    <!-- Maximum recommenders to return when using an AnimeRecs rec source -->
    <add key="MaximumRecommendersToReturn" value="6" />

    <!-- Maximum recommendations to return when using a non-AnimeRecs rec source -->
    <add key="MaximumRecommendationsToReturn" value="60" />

    <add key="DefaultTargetPercentile" value="35" />

    <add key="MalApi.UserAgentString" value="AnimeRecs-development" />
    <add key="MalApi.TimeoutInMs" value="5000" />

    <!-- If MAL.API is set to "DB", use a local database instead of going to MAL.
    Useful if you don't want to hit MAL. For example, if you're on the train without internet access. -->
    <add key="MalApi.API" value="DB" />

    <add key="ClubMalLink" value="http://myanimelist.net/clubs.php?cid=33431" />

    <!--
    A good place to put Google Analytics code.
    
    These characters must be escaped in the value of HtmlBeforeBodyEnd:
    & = &amp;
    < = &lt;
    > = &gt;
    " = &quot;
    ' = &apos;
    -->
    <add key="HtmlBeforeBodyEnd" value="" />
    <add key="webPages:Enabled" value="false" />
  </appSettings>

  <system.web.webPages.razor>
    <pages pageBaseType="Nancy.ViewEngines.Razor.NancyRazorViewBase`1[[System.Object]]">
      <assemblies>
        <add assembly="Nancy.ViewEngines.Razor" />
      </assemblies>
      <namespaces>
        <add namespace="Nancy.ViewEngines.Razor" />
      </namespaces>
    </pages>
  </system.web.webPages.razor>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog20">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!--<targets>
      <target xsi:type="AsyncWrapper" name="AsyncFile" timeToSleepBetweenBatches="200">
        <target xsi:type="AutoFlushWrapper" name="AutoflushFile">
          <target xsi:type="File" name="File" keepFileOpen="true" concurrentWrites="false" archiveEvery="Day"
                fileName="C:\Users\Greg\AppData\Roaming\AnimeRecs\web_${shortdate}.log"
                layout="${longdate}|${level:uppercase=true:padding=-5}|${threadname:padding=-20}|${message} ${exception:innerformat=tostring:maxInnerExceptionLevel=10:format=tostring}"/>
        </target>
      </target>
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="AsyncFile"/>
    </rules>-->
  </nlog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Common.Logging" publicKeyToken="af08829b84f0328e" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.2.0.0" newVersion="2.2.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="NLog" publicKeyToken="5120e14c03d0593c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.0.0" newVersion="3.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Razor" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
